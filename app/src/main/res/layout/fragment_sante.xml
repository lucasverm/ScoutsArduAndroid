<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="SanteViewModel"
            type="be.ardu.scoutsardu.sante.SanteViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/loading_animation"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/betaaldDatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Betaald: 30/01/2019"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tijdstip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tijdstip: 19:20"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/betaaldDatum"
            app:layout_constraintTop_toBottomOf="@+id/betaaldDatum" />

        <TextView
            android:id="@+id/naam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Naam: Lucas Vermeulen"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/tijdstip"
            app:layout_constraintTop_toBottomOf="@+id/tijdstip" />

        <TextView
            android:id="@+id/bestelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Uw bestelling: "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/naam"
            app:layout_constraintTop_toBottomOf="@+id/naam" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/betaaldOverzichtLijst"
            android:layout_width="399dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bestelling" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>