<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:flexWrap="wrap"
            app:justifyContent="space_around">

            <LinearLayout
                android:id="@+id/enenDrinken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <be.ardu.scoutsardu.utilities.FontAwesomeTextViewSolid
                    android:text="&#xf0fc;"
                    style="@style/fontAwesomeMenuItem"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:text="@string/enen_drinken"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/historiek">

                <be.ardu.scoutsardu.utilities.FontAwesomeTextViewSolid
                    android:text="&#xf1da;"
                    style="@style/fontAwesomeMenuItem"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:text="@string/historiek"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/portefeuille">

                <be.ardu.scoutsardu.utilities.FontAwesomeTextViewSolid
                    android:text="&#xf555;"
                    style="@style/fontAwesomeMenuItem"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:text="@string/portefeuille"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/account">>

                <be.ardu.scoutsardu.utilities.FontAwesomeTextViewSolid
                    android:text="&#xf007;"
                    style="@style/fontAwesomeMenuItem"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:text="@string/Account"
                    android:textAlignment="center" />
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>

</layout>
