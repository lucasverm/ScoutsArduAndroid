<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="defaultButtonColored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="defaultButtonRed">
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="defaultButtonWhite">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="errorMessage">
        <item name="android:height">30dp</item>
        <!--<item name="android:visibility">gone</item>-->
        <item name="android:background">@android:color/holo_red_dark</item><!--#FF0000-->
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="fontAwesomeMenuItem">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">120sp</item>
        <item name="android:contentDescription">@string/Stam</item>
    </style>

    <style name="standaardText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="defaultInputFieldNaam">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="defaultInputFieldEmail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="defaultInputFieldWachtwoord">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="defaultInputFieldTelefoon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">phone</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="defaultRecycleView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="MenuItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="statusImage">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <!--<item name="android:visibility">gone</item>-->
    </style>

    <style name="arduLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:contentDescription">@string/ardulogo</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="schuldenLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">karla</item>
    </style>

    <style name="FontAwesomeSmallLabel">
        <item name="android:width">25dp</item>
        <item name="android:textSize">20sp</item>

    </style>


</resources>
